<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="Profil"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamUp.Views.pageProfil">

    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Profil" 
                   TextColor="White" 
                   FontAttributes="Bold"
                   FontSize="Large"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout BackgroundColor="White" Padding="30,0,30,0">
            <StackLayout Padding="30,10,30,10">
                <Image Source="NonoPasSportive.jpg"
                       WidthRequest="150"
                       x:Name="urlImage"/>
            </StackLayout>
            
            <Label Text="NonoLaNonSportive" 
                   FontAttributes="Bold" 
                   FontSize="Title" 
                   Padding="30,10,30,10" 
                   HorizontalTextAlignment="Center" 
                   TextColor="Black"
                   x:Name="Identifiant"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*" />
                    <ColumnDefinition Width="0.5*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>
                <Label Text="Nom" 
                       FontSize="Small" 
                       TextColor="Black"/>
                <Entry Grid.Column="1"
                       IsPassword="False" 
                       ClearButtonVisibility="WhileEditing" 
                       ReturnType="Go"
                       x:Name="Nom"/>
                <Label Grid.Row="1"
                       Text="Prenom" 
                       FontSize="Small"
                       TextColor="Black" />
                <Entry Grid.Row="1" 
                       Grid.Column="1"
                       IsPassword="False" 
                       ClearButtonVisibility="WhileEditing" 
                       ReturnType="Go"
                       x:Name="Prenom"/>
                <Label Grid.Row="2"
                       Text="Date de naissance"
                       FontSize="Small"
                       TextColor="Black"/>
                <DatePicker Grid.Row="2" 
                            Grid.Column="1"
                            x:Name="startDatePicker"
                            Format="dd/MM/yyyy"
                            FontSize="Small"
                            DateSelected="OnDateSelected"/>
                <Label Grid.Row="3"
                       Text="Identifiant"
                       FontSize="Small"
                       TextColor="Black" />
                <Entry Grid.Row="3" 
                       Grid.Column="1"
                       IsPassword="False" 
                       ClearButtonVisibility="WhileEditing" 
                       ReturnType="Go"
                       x:Name="IdentifiantBis"/>
                <Label Grid.Row="4"
                       Text="E-mail"
                       FontSize="Small"
                       TextColor="Black" />
                <Entry Grid.Row="4" 
                       Grid.Column="1"
                       IsPassword="False" 
                       ClearButtonVisibility="WhileEditing" 
                       ReturnType="Go"
                       x:Name="Mail"/>
                <Label Grid.Row="5"
                       Text="Localisation" 
                       FontSize="Small"
                       TextColor="Black" />
                <Entry Grid.Row="5" 
                       Grid.Column="1"
                       IsPassword="False" 
                       ClearButtonVisibility="WhileEditing" 
                       ReturnType="Go"
                       x:Name="Localisation"/>
                <Label Grid.Row="6"
                       Text="Périmètre"
                       FontSize="Small"
                       TextColor="Black" />
                <Slider Grid.Row="6"
                        Grid.Column="1"
                        Maximum="30"/>
                <Label Grid.Row="7"
                       Text="Préférences" 
                       FontSize="Small"
                       TextColor="Black" />
                <Picker Grid.Row="7"
                        Grid.Column="1"
                        x:Name="picker"
                        Title="Choix d'un sport"
                        FontSize="Small"
                        TitleColor="LightGray">
                        
                </Picker>
            </Grid>
            
            <StackLayout>
                <StackLayout Orientation="Horizontal" 
                             Margin="0, 10, 0, 10">
                    <Label Text="Changer le mot de passe"
                           x:Name="lblclick"
                           VerticalTextAlignment="Center"
                           FontSize="Micro"
                           TextColor="#1950a3"
                           TextDecorations="Underline"/>

                </StackLayout>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.5*" />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Button Text="Enregistrer" 
                            TextColor="Black" 
                            WidthRequest="150" 
                            HorizontalOptions="Start" 
                            BorderColor="Black" 
                            BorderWidth="3" 
                            FontSize="Micro"
                            BackgroundColor="White"
                            Clicked="OnClickMdpOublie" />

                    <Button Clicked="OnClickDeconnexion" 
                            Text="Se déconnecter" 
                            TextColor="Black" 
                            WidthRequest="150" 
                            HorizontalOptions="End" 
                            BorderColor="Black" 
                            BorderWidth="3" 
                            BackgroundColor="White"
                            FontSize="Micro"
                            Grid.Column="1"/>
                </Grid>
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>