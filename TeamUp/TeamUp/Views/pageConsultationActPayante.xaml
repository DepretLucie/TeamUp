<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TeamUp.Views.pageConsultationActPayante">
    <NavigationPage.TitleView>
        <StackLayout>
            <Label Text="Activité" 
                   TextColor="White" 
                   FontAttributes="Bold"
                   FontSize="Large"/>
        </StackLayout>
    </NavigationPage.TitleView>

    <ContentPage.ToolbarItems>
        <ToolbarItem Order="Secondary"
                     Priority="0" 
                     Text="Modifier"
                     Clicked="OnClickModifActPayante"/>
        <ToolbarItem Order="Secondary"
                     Priority="0" 
                     Text="Supprimer"
                     Clicked="OnClickSupprActPayante"/>
        <ToolbarItem Order="Secondary"
                     Priority="0" 
                     Text="Supprimer Teammates"
                     Clicked="OnClickSupprTeammates"/>
    </ContentPage.ToolbarItems>

    <ContentPage.Content>
        <StackLayout>
            <StackLayout Orientation="Horizontal" Padding="10,20,10,10">
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="13 Avr" FontSize="Title"  FontFamily="rubik" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="-" FontSize="Title"  FontFamily="rubik" HorizontalTextAlignment="Center"/>
                </StackLayout>
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <Label Text="Match de football" TextColor="Black" FontSize="Title"  FontFamily="rubik" HorizontalTextAlignment="Center"/>
                </StackLayout>
            </StackLayout>

            <StackLayout Orientation="Horizontal" Padding="45,10,10,20">
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal" Padding="0,40,0,30">
                        <Image Source="icon_ping.jpg" WidthRequest="40"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,7,0,30">
                        <Image Source="icon_timer.jpg" WidthRequest="35"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,5,0,30">
                        <Image Source="icon_moula.jpg" WidthRequest="40"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,5,0,30">
                        <Image Source="icon_croissance.jpg" WidthRequest="45"/>
                    </StackLayout>
                </StackLayout>
                    
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal" Padding="0,25,0,5">
                        <Image Source="icon_barre.png" WidthRequest="70"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,-11,0,5">
                        <Image Source="icon_barre.png" WidthRequest="70"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,-11,0,5">
                        <Image Source="icon_barre.png" WidthRequest="70"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,-11,0,5">
                        <Image Source="icon_barre.png" WidthRequest="70"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" Padding="0,-50,0,5">
                        <Image Source="icon_barre.png" WidthRequest="70"/>
                    </StackLayout>
                </StackLayout>
                
                <StackLayout Orientation="Vertical" HorizontalOptions="CenterAndExpand">
                    <StackLayout Orientation="Vertical" Padding="-25,37,0,30">
                        <Label Text="Lieu de rendez-vous" TextColor="Black"  FontFamily="rubik"/>
                        <Label Text="Stade Saint Jean ANGLET" TextColor="Black"  FontFamily="rubikI"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Padding="-25,0,0,30">
                        <Label Text="Horaires" TextColor="Black"  FontFamily="rubik"/>
                        <Label Text="14h00 - 15h30" TextColor="Black"  FontFamily="rubikI"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Padding="-25,0,0,30">
                        <Label Text="Tarif" TextColor="Black"  FontFamily="rubik"/>
                        <Label Text="10€" TextColor="Black"  FontFamily="rubikI"/>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" Padding="-25,0,0,30">
                        <Label Text="Niveau" TextColor="Black"  FontFamily="rubik"/>
                        <Label Text="Amateur" TextColor="Black"  FontFamily="rubikI"/>
                    </StackLayout>
                </StackLayout>
            </StackLayout>

            <Label Padding="15,0,0,0" Text="Teammates inscrits (3/4)" TextColor="Black"  FontFamily="rubik"/>

            <TableView Intent="Data">
                <TableRoot>
                    <TableSection>
                        <TextCell Text="LuluChacha" TextColor="Black"/>
                        <TextCell Text="HugoLeBeau" TextColor="Black"/>
                        <TextCell Text="TommyPrincesse" TextColor="Black"/>
                    </TableSection>
                </TableRoot>
            </TableView>


            <StackLayout Padding="10,10,10,10">
                <Button Text="S'inscrire"
                        HorizontalOptions="End"
                        TextColor="Black" 
                        BorderColor="Black" 
                        BorderWidth="2" 
                        BackgroundColor="White"
                        WidthRequest="125"
                        Clicked="OnClickInscriptionActPayante"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>